{
    "manifest_version": 3,
    "name": "Hirist+ Company Research Tool",
    "version": "1.0.0",
    "description": "Enhance your job search on Hirist by adding quick LinkedIn company research capabilities. Seamlessly search for companies while browsing jobs.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.hirist.tech/*",
        "https://www.linkedin.com/*"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.hirist.tech/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "author": "Your Name",
    "homepage_url": "https://github.com/yourusername/jobhunt-plus"
}